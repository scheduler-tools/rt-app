{
	/*
	 * Use case which creates a thread that runs 2ms then sleep 8ms
	 * in taskgroup /tg1. The use case runs for 2secs or until it
	 * is stopped with Ctrl+C.
	 */
	"tasks" : {
		"thread0" : {
			"loop" : -1,
			"run" :   20000,
			"sleep" : 80000,
			"taskgroup" : "/tg1"
		}
	},
	"global" : {
		"duration" : 2,
		"calibration" : "CPU0",
		"default_policy" : "SCHED_OTHER",
		"pi_enabled" : false,
		"lock_pages" : false,
		"logdir" : "./",
		"log_basename" : "rt-app1",
		"ftrace" : true,
		"gnuplot" : true
	}
}
